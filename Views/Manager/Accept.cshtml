@{
    ViewData["Title"] = "Accept month";
    string Code = (string) ViewData["Code"];
    string UserName = (string) ViewData["User"];
    DateTime Date = (DateTime) ViewData["Date"];
}

@model NtrTrs.Models.ManagerViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Accept</title>


</head>
<body>

<h4>Entry</h4>
<hr />

<div class="row justify-content-center">
    <div class="col">
        <form asp-action="Accept">
            <input type="hidden" id="Code" name="Code" value="@Code" /> 
            <input type="hidden" id="UserName" name="UserName" value="@UserName" /> 
            <input type="hidden" id="Date" name="Date" value="@Date" /> 

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AcceptedTime" class="control-label"></label>
                <input asp-for="AcceptedTime" class="form-control" />
                <span asp-validation-for="AcceptedTime" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</body>
</html> 
